package br.com.reportmanager.report.resource;

import java.io.File;
import java.io.IOException;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/relatorio")
public class ReportResource {

	@GetMapping
	public ResponseEntity<String> testando() {
		
		String folderReports = "src/main/resources/reports/";
		
		System.out.println("erro: " + this.getClass().getResource("/teste.txt"));
		
		File file = new File(folderReports+"teste1.txt");
		
		try {
			file.createNewFile();
		} catch (IOException e) {
			e.printStackTrace();
		}

		return ResponseEntity.ok("Deu tudo certo");
	}

}
