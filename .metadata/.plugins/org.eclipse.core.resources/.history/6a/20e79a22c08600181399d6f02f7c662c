package br.com.reportmanager.report.resource;

import java.io.File;
import java.nio.file.Files;
import java.nio.file.LinkOption;
import java.nio.file.Path;
import java.nio.file.Paths;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/relatorio")
public class ReportResource {

	@GetMapping
	public ResponseEntity<String> testando() {

		File file = new File(getClass().getClassLoader().getResource("teste.txt").getFile());
		
		Path path = Paths.get(getClass().getClassLoader().getResource("/"));
		
		System.out.println();
		
		Files.createFile(getClass().getClassLoader().getResource("").getPath(), LinkOption.NOFOLLOW_LINKS);

		file.mkdirs();

		return ResponseEntity.ok("Deu tudo certo");
	}

}
